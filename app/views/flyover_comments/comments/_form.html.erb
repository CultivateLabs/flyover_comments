<%= form_for comment, {url: flyover_comments.comments_path, html: { id: "flyover-comment-form", class: "flyover-comment-form" }}.merge(form_opts) do |f| %>
  <%= hidden_field_tag :commentable_id, comment.commentable_id if comment.commentable_id %>
  <%= hidden_field_tag :commentable_type, comment.commentable_type if comment.commentable_type %>
  <%= hidden_field_tag :parent_id, comment.parent_id %>
  <div class="flyover-comment-text-area form-group">
    <%= f.text_area :content, class: "form-control flyover-comment-text-area-input", placeholder: t('.comment_content_placeholder') %>
  </div>
  <div class="flyover-comment-submit">
    <%= f.submit t('.submit'), class: "btn btn-primary", data: { disable_with: t('.submitting') } %>
    <%= link_to t('.cancel'), "#", class: "flyover-comment-cancel hide" %>
  </div>
<% end %>
