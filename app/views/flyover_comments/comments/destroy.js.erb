<% if @comment.destroyed? || params[:hide_after_deletion] == "true" %>
$("[id=flyover_comment_<%= @comment.id %>]").remove();
<% elsif params[:hide_delete_after_deletion] == "true" %>
$("[id=delete_flyover_comment_<%= @comment.id %>]").remove();
<% else %>
$("[id=flyover_comment_<%= @comment.id %>]").replaceWith('<%= escape_javascript(render @comment) %>');
<% end %>
